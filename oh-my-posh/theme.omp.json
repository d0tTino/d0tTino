{
    "schemaVersion": 1,
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#005f87"
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "foreground": "#ffffff",
                    "background": "#870000",
                    "properties": {
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                }
            ]
        }
    ],
    "final_space": true
}
